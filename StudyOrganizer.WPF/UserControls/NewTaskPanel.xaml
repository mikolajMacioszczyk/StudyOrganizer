<UserControl x:Class="StudyOrganizer.WPF.UserControls.NewTaskPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:StudyOrganizer.WPF.UserControls"
             xmlns:converters="clr-namespace:StudyOrganizer.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="VisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ToolBarTray Orientation="Vertical" Visibility="{Binding Path=IsNewTaskPanelVisible, Converter={StaticResource VisibilityConverter}}">
            <ToolBar  Background="AliceBlue"></ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
